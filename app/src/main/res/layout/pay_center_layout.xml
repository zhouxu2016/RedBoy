                android:id="@+id/tv_express_way"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:background="@drawable/button_long_selected"
                android:text="收货方式"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/open"
            />
            <TextView
                android:id="@+id/tv_favorable"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:background="@drawable/button_long_selected"
                android:text="使用优惠券"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/open"
                />
            <TextView
                android:id="@+id/tv_want_invoice"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:background="@drawable/button_long_selected"
                android:text="索取发票"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/open"
                />
            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shapeshow"
                android:text="商品明细"/>
            <include layout="@layout/shoppin_listview_body_code"/>
            <!--<include layout="@layout/item_listview_shopping_car"/>-->


            <include layout="@layout/pay_center_list"/>
            <Button
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交订单"
                android:textColor="@color/white"
                android:background="@drawable/button_long_normal"/>
